@using Application.Classes
@using Application.Interfaces.Services
@using static Application.Contracts.DTOs.Response

@attribute [Route(ApplicationConstants.Routes.WorkPage)]
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
@inject IWorkService WorkService
@inject IJSRuntime JS

<MudContainer MaxWidth="MaxWidth.Large" Class="py-8">
    <div class="d-flex align-center mb-8 gap-4">
        <MudIconButton Icon="@Icons.Material.Filled.ArrowBack"
                       Variant="Variant.Outlined"
                       Size="Size.Medium"
                       OnClick="GoBack"
                       Class="rounded-lg" />

        <MudText Typo="Typo.h4" Class="fw-bold">My Work Experience</MudText>

        <MudSpacer />

        @if (_isBusy)
        {
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Small" />
        }
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Class="mb-4">
            @_errorMessage
        </MudAlert>
        <MudButton StartIcon="@Icons.Material.Filled.Refresh"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   OnClick="LoadWorksAsync">
            Retry
        </MudButton>
    }
    else if (_isBusy && (_works == null || !_works.Any()))
    {
        <div class="mt-4">
            @for (int i = 0; i < 3; i++)
            {
                <MudSkeleton Width="100%" Height="140px" Class="mb-6 rounded-lg" />
            }
        </div>
    }
    else if (_works != null)
    {
        <div class="experience-timeline">
            @foreach (var work in PagedWorks)
            {
                <MudCard Class="experience-card mb-6 mud-elevation-2" @onclick="() => OpenWorkDetail(work.Id)">
                    <MudCardContent>
                        <div class="d-flex flex-column flex-md-row gap-4">
                            <div class="company-logo-container d-flex align-center justify-center">
                                @if (!string.IsNullOrWhiteSpace(GetEnterpriseImageSrc(work.Enterprise?.Image)))
                                {
                                    <MudImage Src="@GetEnterpriseImageSrc(work.Enterprise?.Image)"
                                              Alt="@work.Enterprise?.Name"
                                              Class="company-logo" />
                                }
                                else
                                {
                                    <MudIcon Icon="@Icons.Material.Filled.Business" Size="Size.Large" Color="Color.Primary" />
                                }
                            </div>

                            <div class="flex-grow-1">
                                <div class="d-flex flex-column flex-sm-row justify-sm-between align-sm-center mb-2">
                                    <MudText Typo="Typo.h6" Class="fw-bold">@work.Title</MudText>
                                    <MudChip T="string" Color="Color.Primary" Variant="Variant.Text" Size="Size.Small" Class="experience-date-chip">
                                        @FormatRange(work.StartDate, work.EndDate)
                                    </MudChip>
                                </div>

                                <div class="d-flex align-center gap-2 mb-3">
                                    <MudLink Href="@work.Enterprise?.Url" Target="_blank" Underline="Underline.Hover"
                                             Color="Color.Info" Class="fw-semibold" @onclick:stopPropagation="true">
                                        @work.Enterprise?.Name
                                    </MudLink>
                                 </div>

                                <MudText Typo="Typo.body2" Class="experience-desc">
                                    @work.Description
                                </MudText>
                            </div>
                        </div>
                    </MudCardContent>
                </MudCard>
            }
        </div>

        @if (TotalPages > 1)
        {
            <div class="d-flex justify-center mt-10">
                <MudPagination Color="Color.Primary"
                               Count="@TotalPages"
                               Selected="@_selectedPage"
                               SelectedChanged="OnPageChanged"
                               Variant="Variant.Filled"
                               Class="pa-4" />
            </div>
        }
    }
</MudContainer>

<style>
    .experience-card {
        border-radius: 12px;
        transition: all 0.2s ease-in-out;
        cursor: pointer;
        border: 1px solid rgba(0,0,0,0.08);
        position: relative;
        overflow: hidden;
    }

        .experience-card:hover {
            transform: translateX(8px);
            border-color: var(--mud-palette-primary);
            box-shadow: var(--mud-elevation-4) !important;
        }

        .experience-card::before {
            content: "";
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 4px;
            background: var(--mud-palette-primary);
            opacity: 0;
            transition: opacity 0.2s;
        }

        .experience-card:hover::before {
            opacity: 1;
        }

    .company-logo-container {
        width: 64px;
        height: 64px;
        background: var(--mud-palette-background-grey);
        border-radius: 12px;
        flex-shrink: 0;
    }

    .company-logo {
        width: 100%;
        height: 100%;
        object-fit: contain;
        padding: 8px;
    }

    .experience-desc {
        color: var(--mud-palette-text-secondary);
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .experience-date-chip {
        font-weight: 600;
        background-color: var(--mud-palette-action-default-hover);
    }
</style>

@code {
    private IEnumerable<WorkDto>? _works;
    private bool _isBusy;
    private string? _errorMessage;

    private int _selectedPage = 1;
    private int _pageSize = 5; 

    private int TotalPages => _works == null ? 0 : (int)Math.Ceiling(_works.Count() / (double)_pageSize);

    private IEnumerable<WorkDto> PagedWorks =>
        _works?.OrderByDescending(w => w.StartDate)
               .Skip((_selectedPage - 1) * _pageSize)
               .Take(_pageSize) ?? Enumerable.Empty<WorkDto>();

    protected override Task OnInitializedAsync() => LoadWorksAsync();

    private async Task LoadWorksAsync()
    {
        _errorMessage = null;
        _isBusy = true;
        try
        {
            var result = await WorkService.GetWorksAsync();
            if (result.IsSuccess)
            {
                _works = result.Value;
                _selectedPage = 1;
            }
            else
                _errorMessage = result.ErrorMessage ?? "Failed to load experience data.";
        }
        catch (Exception ex) { _errorMessage = ex.Message; }
        finally
        {
            _isBusy = false;
            StateHasChanged();
        }
    }

    private void OnPageChanged(int page)
    {
        _selectedPage = page;
        JS.InvokeVoidAsync("window.scrollTo", 0, 0);
    }

    private string GetEnterpriseImageSrc(ImageDto? image) =>
        image == null ? string.Empty :
        (!string.IsNullOrWhiteSpace(image.Path) ? image.Path : (image.Url ?? string.Empty));

    private string FormatRange(DateOnly start, DateOnly? end) =>
        $"{start:MMM yyyy} — {(end.HasValue ? end.Value.ToString("MMM yyyy") : "Present")}";

    private async Task GoBack()
    {
        try
        {
            var canGoBack = await JS.InvokeAsync<bool>("appNav.canGoBack");
            if (canGoBack) { await JS.InvokeVoidAsync("appNav.goBack"); return; }
        }
        catch { }
        NavigationManager.NavigateTo(ApplicationConstants.Routes.Index);
    }

    private void OpenWorkDetail(int id) =>
        NavigationManager.NavigateTo(ApplicationConstants.Routes.GetDetailRoute(Application.Enums.DetailsPageType.Work, id));
}