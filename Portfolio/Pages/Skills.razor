@using Application.Classes
@using Application.Interfaces.Services
@using static Application.Contracts.DTOs.Response

@attribute [Route(ApplicationConstants.Routes.SkillsPage)]
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
@inject ISkillsService SkillService
@inject IJSRuntime JS

<MudContainer MaxWidth="MaxWidth.Large" Class="py-8">
    <div class="d-flex align-center mb-8 gap-4">
        <MudIconButton Icon="@Icons.Material.Filled.ArrowBack"
                       Variant="Variant.Outlined"
                       Size="Size.Medium"
                       OnClick="GoBack"
                       Class="rounded-lg" />

        <MudText Typo="Typo.h4" Class="fw-bold">Skills & Technologies</MudText>

        <MudSpacer />

        @if (_isBusy)
        {
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Small" />
        }
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Class="mb-4">
            @_errorMessage
        </MudAlert>
        <MudButton StartIcon="@Icons.Material.Filled.Refresh"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   OnClick="LoadSkillsAsync">
            Retry
        </MudButton>
    }
    else if (_isBusy && (_skills == null || !_skills.Any()))
    {
        @for (int i = 0; i < 3; i++)
        {
            <MudSkeleton Width="30%" Height="40px" Class="mb-4" />
            <MudPaper Class="pa-4 mb-8">
                @for (int j = 0; j < 4; j++)
                {
                    <div class="d-flex align-center gap-4 mb-3">
                        <MudSkeleton SkeletonType="SkeletonType.Circle" Width="40px" Height="40px" />
                        <div class="flex-grow-1">
                            <MudSkeleton Width="60%" />
                            <MudSkeleton Width="90%" Height="12px" />
                        </div>
                    </div>
                }
            </MudPaper>
        }
    }
    else if (_skills != null)
    {
        @foreach (var group in PagedGroups)
        {
            <div class="mb-10">
                <div class="d-flex align-center gap-3 mb-4">
                    <div class="category-indicator"></div>
                    <MudText Typo="Typo.h5" Class="fw-bold text-uppercase" Style="letter-spacing: 1.5px;">
                        @group.Key
                    </MudText>
                </div>

                <MudPaper Elevation="0" Outlined="true" Class="skill-list-container rounded-xl overflow-hidden">
                    @foreach (var skill in group)
                    {
                        <div class="skill-list-item d-flex align-center pa-4">
                            <div class="skill-icon-box d-flex align-center justify-center mr-4">
                                @if (!string.IsNullOrWhiteSpace(skill.Icon))
                                {
                                    <MudIcon Icon="@skill.Icon" Size="Size.Medium" Color="Color.Primary" />
                                }
                                else
                                {
                                    <MudIcon Icon="@Icons.Material.Filled.Code" Size="Size.Medium" Class="opacity-50" />
                                }
                            </div>

                            <div class="flex-grow-1">
                                <div class="d-flex align-end gap-2">
                                    <MudText Typo="Typo.subtitle1" Class="fw-bold">@skill.Name</MudText>
                                    @if (!string.IsNullOrWhiteSpace(skill.Motivation))
                                    {
                                        <MudText Typo="Typo.caption" Class="mb-1 opacity-60 italic-text d-none d-sm-inline">
                                            — @skill.Motivation
                                        </MudText>
                                    }
                                </div>
                                <MudText Typo="Typo.body2" Class="opacity-75">@skill.Description</MudText>
                            </div>
                        </div>
                        @if (skill != group.Last())
                        {
                            <MudDivider DividerType="DividerType.Middle" Class="mx-4" />
                        }
                    }
                </MudPaper>
            </div>
        }

        @if (TotalPages > 1)
        {
            <div class="d-flex justify-center mt-12">
                <MudPagination Color="Color.Primary"
                               Variant="Variant.Filled"
                               Count="@TotalPages"
                               Selected="@_selectedPage"
                               SelectedChanged="OnPageChanged" />
            </div>
        }
    }
</MudContainer>

<style>
    .category-indicator {
        width: 6px;
        height: 24px;
        background-color: var(--mud-palette-primary);
        border-radius: 4px;
    }

    .skill-list-container {
        border: 1px solid rgba(0,0,0,0.1);
        background-color: var(--mud-palette-background-grey);
    }

    .skill-list-item {
        transition: background-color 0.2s ease;
        background-color: var(--mud-palette-background);
    }

        .skill-list-item:hover {
            background-color: var(--mud-palette-action-default-hover);
        }

    .skill-icon-box {
        width: 48px;
        height: 48px;
        min-width: 48px;
        background-color: var(--mud-palette-background-grey);
        border-radius: 12px;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .italic-text {
        font-style: italic;
    }

    .skill-list-item:hover .skill-icon-box {
        transform: scale(1.05);
        border-color: var(--mud-palette-primary);
        transition: all 0.2s ease;
    }
</style>

@code {
    private IEnumerable<SkillDto>? _skills;
    private bool _isBusy;
    private string? _errorMessage;

    private int _selectedPage = 1;
    private int _pageSize = 3;

    private IEnumerable<IGrouping<string, SkillDto>> AllGroups =>
        _skills?.GroupBy(s => string.IsNullOrWhiteSpace(s.Category) ? "Other" : s.Category)
                .OrderBy(g => g.Key) ?? Enumerable.Empty<IGrouping<string, SkillDto>>();

    private int TotalPages => (int)Math.Ceiling(AllGroups.Count() / (double)_pageSize);

    private IEnumerable<IGrouping<string, SkillDto>> PagedGroups =>
        AllGroups.Skip((_selectedPage - 1) * _pageSize).Take(_pageSize);

    protected override Task OnInitializedAsync() => LoadSkillsAsync();

    private async Task LoadSkillsAsync()
    {
        _errorMessage = null;
        _isBusy = true;
        try
        {
            var result = await SkillService.GetSkillsAsync();
            if (result.IsSuccess) _skills = result.Value;
            else _errorMessage = result.ErrorMessage ?? "Failed to load skills.";
        }
        catch (Exception ex) { _errorMessage = ex.Message; }
        finally
        {
            _isBusy = false;
            StateHasChanged();
        }
    }

    private void OnPageChanged(int page)
    {
        _selectedPage = page;
        JS.InvokeVoidAsync("window.scrollTo", 0, 0);
    }

    private async Task GoBack()
    {
        try
        {
            var canGoBack = await JS.InvokeAsync<bool>("appNav.canGoBack");
            if (canGoBack) { await JS.InvokeVoidAsync("appNav.goBack"); return; }
        }
        catch { }
        NavigationManager.NavigateTo(ApplicationConstants.Routes.Index);
    }
}