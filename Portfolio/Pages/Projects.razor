@using Application.Classes
@using Application.Interfaces.Services
@using static Application.Contracts.DTOs.Response

@attribute [Route(ApplicationConstants.Routes.ProjectsPage)]
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
@inject IProjectService ProjectService
@inject IJSRuntime JS

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-8">
    <div class="d-flex align-center mb-6 gap-4">
        <MudIconButton Icon="@Icons.Material.Filled.ArrowBack"
                       Variant="Variant.Outlined"
                       Size="Size.Medium"
                       OnClick="GoBack"
                       Class="rounded-lg" />

        <MudText Typo="Typo.h4" Class="fw-bold">My Portfolio</MudText>

        <MudSpacer />

        @if (_isBusy)
        {
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Small" />
        }
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Class="mb-4">
            @_errorMessage
        </MudAlert>
        <MudButton StartIcon="@Icons.Material.Filled.Refresh"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   OnClick="LoadProjectsAsync">
            Retry
        </MudButton>
    }
    else if (_isBusy && (_projects == null || !_projects.Any()))
    {
        <MudGrid>
            @for (int i = 0; i < 8; i++)
            {
                <MudItem xs="12" sm="6" md="4" lg="3">
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="200px" Class="rounded-lg" />
                    <MudSkeleton Width="60%" Class="mt-2" />
                    <MudSkeleton Width="100%" Height="40px" />
                </MudItem>
            }
        </MudGrid>
    }
    else if (_projects != null)
    {
        <MudGrid>
            @foreach (var p in PagedProjects)
            {
                <MudItem xs="12" sm="6" md="4" lg="3">
                    <MudCard Class="project-card mud-elevation-2 h-100 d-flex flex-column"
                             @onclick="() => OpenProjectDetail(p.Id)">

                        <div class="thumb-wrap">
                            <MudImage Src="@GetCover(p)"
                                      Alt="@GetAlt(p)"
                                      LazyLoad="true"
                                      ObjectFit="ObjectFit.Cover"
                                      Style="width:100%;height:100%;" />
                        </div>

                        <MudCardContent Class="project-body d-flex flex-column flex-grow-1">
                            <MudText Typo="Typo.h6" Class="fw-bold mb-1">@p.Name</MudText>

                            <MudText Typo="Typo.body2" Class="desc flex-grow-1">
                                @Truncate(p.Description, 150)
                            </MudText>

                            <MudStack Row="true" Class="mt-4" Spacing="2">
                                @if (!string.IsNullOrWhiteSpace(p.DemoUrl))
                                {
                                    <MudIconButton Icon="@Icons.Material.Filled.Public"
                                                   Link="@p.DemoUrl"
                                                   Target="_blank"
                                                   Size="Size.Small"
                                                   Color="Color.Primary"
                                                   @onclick:stopPropagation="true" />
                                }
                                @if (!string.IsNullOrWhiteSpace(p.SourceCodeUrl))
                                {
                                    <MudIconButton Icon="@Icons.Custom.Brands.GitHub"
                                                   Link="@p.SourceCodeUrl"
                                                   Target="_blank"
                                                   Size="Size.Small"
                                                   @onclick:stopPropagation="true" />
                                }
                                <MudSpacer />
                                <MudButton Variant="Variant.Text"
                                           Color="Color.Primary"
                                           Size="Size.Small"
                                           EndIcon="@Icons.Material.Filled.ChevronRight">
                                    Details
                                </MudButton>
                            </MudStack>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>

        @if (TotalPages > 1)
        {
            <div class="d-flex justify-center mt-8">
                <MudPagination Color="Color.Primary"
                               Count="@TotalPages"
                               Selected="@_selectedPage"
                               SelectedChanged="OnPageChanged"
                               Variant="Variant.Filled" />
            </div>
        }
    }
</MudContainer>

<style>
    .project-card {
        border-radius: 12px;
        transition: all .25s ease-in-out;
        cursor: pointer;
        border: 1px solid rgba(0,0,0,0.05);
    }

        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px rgba(0,0,0,0.1) !important;
            border-color: var(--mud-palette-primary);
        }

    .thumb-wrap {
        width: 100%;
        aspect-ratio: 16 / 9;
        background: #f4f4f4;
        overflow: hidden;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .desc {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        color: var(--mud-palette-text-secondary);
        min-height: 3.6em;
    }
</style>

@code {
    private IEnumerable<ProjectDto>? _projects;
    private bool _isBusy;
    private string? _errorMessage;

    private int _selectedPage = 1;
    private int _pageSize = 8;

    private int TotalPages => _projects == null ? 0 : (int)Math.Ceiling(_projects.Count() / (double)_pageSize);

    private IEnumerable<ProjectDto> PagedProjects =>
        _projects?.Skip((_selectedPage - 1) * _pageSize).Take(_pageSize) ?? Enumerable.Empty<ProjectDto>();

    protected override Task OnInitializedAsync() => LoadProjectsAsync();

    private async Task LoadProjectsAsync()
    {
        _errorMessage = null;
        await ExecuteLoadAsync(
            () => ProjectService.GetProjectsAsync(),
            val =>
            {
                _projects = val;
                _selectedPage = 1;
            },
            err => _errorMessage = err,
            b => _isBusy = b
        );
    }

    private async Task ExecuteLoadAsync<T>(Func<Task<Result<IEnumerable<T>>>> serviceCall, Action<IEnumerable<T>> onSuccess, Action<string> onError, Action<bool> setBusy)
    {
        try
        {
            setBusy(true);
            StateHasChanged();
            var result = await serviceCall();
            if (result == null) onError("Service returned no response.");
            else if (result.IsSuccess) onSuccess(result.Value ?? Enumerable.Empty<T>());
            else
            {
                onError(result.ErrorMessage ?? "Failed to load data.");
                Snackbar.Add(result.ErrorMessage ?? "Error loading data", Severity.Error);
            }
        }
        catch (Exception ex) { onError(ex.Message); }
        finally
        {
            setBusy(false);
            StateHasChanged();
        }
    }

    private async Task GoBack()
    {
        try
        {
            var canGoBack = await JS.InvokeAsync<bool>("appNav.canGoBack");
            if (canGoBack)
            {
                await JS.InvokeVoidAsync("appNav.goBack");
                return;
            }
        }
        catch { }
        NavigationManager.NavigateTo(ApplicationConstants.Routes.Index);
    }

    private void OnPageChanged(int page)
    {
        _selectedPage = page;
        JS.InvokeVoidAsync("window.scrollTo", 0, 0);
    }

    private string GetCover(ProjectDto p)
    {
        var img = p.Images?.FirstOrDefault(i =>
            !string.IsNullOrWhiteSpace(i.Url) || !string.IsNullOrWhiteSpace(i.Path));

        var url = BuildUrl(img?.Url);
        if (!string.IsNullOrWhiteSpace(url)) return url;

        var path = BuildUrl(img?.Path);
        return !string.IsNullOrWhiteSpace(path) ? path : Placeholder();
    }

    private string Placeholder()
      => $"{NavigationManager.BaseUri.TrimEnd('/')}/images/placeholders/project-thumb.svg";

    private string BuildUrl(string? s)
    {
        if (string.IsNullOrWhiteSpace(s)) return string.Empty;

        if (Uri.TryCreate(s, UriKind.Absolute, out var abs)) return abs.ToString();

        var baseUri = NavigationManager.BaseUri.TrimEnd('/');
        var rel = s.TrimStart('/');
        return $"{baseUri}/{rel}";
    }


    private string GetAlt(ProjectDto p) => p.Images?.FirstOrDefault()?.AltText ?? p.Name;

    private string Truncate(string? text, int max) =>
        string.IsNullOrEmpty(text) ? "" : (text.Length <= max ? text : text[..max] + "...");

    private void OpenProjectDetail(int id) =>
        NavigationManager.NavigateTo(ApplicationConstants.Routes.GetDetailRoute(Application.Enums.DetailsPageType.Project, id));
}