@using Application.Classes
@using Application.Interfaces.Services
@using static Application.Contracts.DTOs.Response

@attribute [Route(ApplicationConstants.Routes.EducationPage)]
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
@inject IEducationService EducationService
@inject IJSRuntime JS

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-8">
    <div class="d-flex align-center mb-6 gap-4">
        <MudIconButton Icon="@Icons.Material.Filled.ArrowBack"
                       Variant="Variant.Outlined"
                       Size="Size.Medium"
                       OnClick="GoBack"
                       Class="rounded-lg" />

        <MudText Typo="Typo.h4" Class="fw-bold">My Education</MudText>

        <MudSpacer />

        @if (_isBusy)
        {
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Small" />
        }
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Class="mb-4">
            @_errorMessage
        </MudAlert>
        <MudButton StartIcon="@Icons.Material.Filled.Refresh"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   OnClick="LoadEducationsAsync">
            Retry
        </MudButton>
    }
    else if (_isBusy && (_educations == null || !_educations.Any()))
    {
        <MudGrid>
            @for (int i = 0; i < 8; i++)
            {
                <MudItem xs="12" sm="6" md="4" lg="3">
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="200px" Class="rounded-lg" />
                    <MudSkeleton Width="60%" Class="mt-2" />
                    <MudSkeleton Width="100%" Height="40px" />
                </MudItem>
            }
        </MudGrid>
    }
    else if (_educations != null)
    {
        <MudGrid>
            @foreach (var e in PagedEducations)
            {
                <MudItem xs="12" sm="6" md="4" lg="3">
                    <MudCard Class="education-card mud-elevation-2 h-100 d-flex flex-column"
                             @onclick="() => OpenEducationDetail(e.Id)">

                        <div class="thumb-wrap d-flex align-center justify-center bg-light">
                            <MudAvatar Color="Color.Primary" Style="height:70px; width:70px; font-size:2rem;">
                                @(e.School.Name[0])
                            </MudAvatar>
                        </div>

                        <MudCardContent Class="education-body d-flex flex-column flex-grow-1">
                            <MudText Typo="Typo.h6" Class="fw-bold mb-1">@e.Course.Name</MudText>
                            <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="mb-2">@e.School.Name</MudText>

                            <MudText Typo="Typo.body2" Class="desc flex-grow-1">
                                @Truncate(e.Course.Description, 120)
                            </MudText>

                            <div class="mt-2">
                                <MudText Typo="Typo.caption" Class="text-muted">
                                    @e.StartDate.ToString("MMM yyyy") - @(e.EndDate?.ToString("MMM yyyy") ?? "Present")
                                </MudText>
                            </div>

                            <MudStack Row="true" Class="mt-4" Spacing="2">
                                @if (!string.IsNullOrWhiteSpace(e.Course.Url))
                                {
                                    <MudIconButton Icon="@Icons.Material.Filled.Link"
                                                   Link="@e.Course.Url"
                                                   Target="_blank"
                                                   Size="Size.Small"
                                                   Color="Color.Primary"
                                                   @onclick:stopPropagation="true" />
                                }
                                <MudSpacer />
                                <MudButton Variant="Variant.Text"
                                           Color="Color.Primary"
                                           Size="Size.Small"
                                           EndIcon="@Icons.Material.Filled.ChevronRight">
                                    Details
                                </MudButton>
                            </MudStack>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>

        @if (TotalPages > 1)
        {
            <div class="d-flex justify-center mt-8">
                <MudPagination Color="Color.Primary"
                               Count="@TotalPages"
                               Selected="@_selectedPage"
                               SelectedChanged="OnPageChanged"
                               Variant="Variant.Filled" />
            </div>
        }
    }
</MudContainer>

<style>
    .education-card {
        border-radius: 12px;
        transition: all .25s ease-in-out;
        cursor: pointer;
        border: 1px solid rgba(0,0,0,0.05);
    }

        .education-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px rgba(0,0,0,0.1) !important;
            border-color: var(--mud-palette-primary);
        }

    .thumb-wrap {
        width: 100%;
        aspect-ratio: 16 / 9;
        background: var(--mud-palette-background-grey);
        overflow: hidden;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .desc {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        color: var(--mud-palette-text-secondary);
        min-height: 2.8em;
    }
</style>

@code {
    private IEnumerable<EducationDto>? _educations;
    private bool _isBusy;
    private string? _errorMessage;

    private int _selectedPage = 1;
    private int _pageSize = 8;

    private int TotalPages => _educations == null ? 0 : (int)Math.Ceiling(_educations.Count() / (double)_pageSize);

    private IEnumerable<EducationDto> PagedEducations =>
        _educations?.Skip((_selectedPage - 1) * _pageSize).Take(_pageSize) ?? Enumerable.Empty<EducationDto>();

    protected override Task OnInitializedAsync() => LoadEducationsAsync();

    private async Task LoadEducationsAsync()
    {
        _errorMessage = null;
        await ExecuteLoadAsync(
            () => EducationService.GetEducationsAsync(),
            val =>
            {
                _educations = val.OrderByDescending(x => x.StartDate);
                _selectedPage = 1;
            },
            err => _errorMessage = err,
            b => _isBusy = b
        );
    }

    private async Task ExecuteLoadAsync<T>(Func<Task<Result<IEnumerable<T>>>> serviceCall, Action<IEnumerable<T>> onSuccess, Action<string> onError, Action<bool> setBusy)
    {
        try
        {
            setBusy(true);
            StateHasChanged();

            var result = await serviceCall();

            if (result == null)
                onError("Service returned no response.");
            else if (result.IsSuccess)
                onSuccess(result.Value ?? Enumerable.Empty<T>());
            else
                onError(result.ErrorMessage ?? "Failed to load data.");
        }
        catch (Exception ex)
        {
            onError(ex.Message);
        }
        finally
        {
            setBusy(false);
            StateHasChanged();
        }
    }

    private async Task GoBack()
    {
        try
        {
            var canGoBack = await JS.InvokeAsync<bool>("appNav.canGoBack");
            if (canGoBack)
            {
                await JS.InvokeVoidAsync("appNav.goBack");
                return;
            }
        }
        catch { }
        NavigationManager.NavigateTo(ApplicationConstants.Routes.Index);
    }

    private void OnPageChanged(int page)
    {
        _selectedPage = page;
        JS.InvokeVoidAsync("window.scrollTo", 0, 0);
    }

    private string Truncate(string? text, int max) =>
        string.IsNullOrEmpty(text) ? "" : (text.Length <= max ? text : text[..max] + "...");

    private void OpenEducationDetail(int id) =>
        NavigationManager.NavigateTo(ApplicationConstants.Routes.GetDetailRoute(Application.Enums.DetailsPageType.Education, id));
}