@using MudBlazor
<MudCard Class="mt-4" Elevation="1" Outlined="true">
    <MudCardContent>
        <MudStack Spacing="2">
            <MudStack Direction="Row" AlignItems="AlignItems.Center" Spacing="2">
                <MudIcon Icon="@Icons.Material.Filled.BugReport" Color="Color.Error" Size="Size.Large" />
                <MudText Typo="Typo.h6">@ErrorTitle</MudText>
            </MudStack>

            <!--oops face -->
            <svg width="120" height="60" viewBox="0 0 120 60" role="img" aria-label="Oops face">
                <circle cx="30" cy="25" r="6" fill="currentColor" opacity=".75" />
                <circle cx="90" cy="25" r="6" fill="currentColor" opacity=".75" />
                <path d="M30 45 Q60 25 90 45" stroke="currentColor" stroke-width="4" fill="none" />
            </svg>

            <MudText Color="Color.Error" Typo="Typo.body2">@ErrorMessage</MudText>
            <MudText Typo="Typo.caption" Color="Color.Secondary">
                The pixels are unionizing. Let’s try that again.
            </MudText>

            <MudStack Direction="Row" Spacing="1">
                <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="OnRetryClicked" StartIcon="@Icons.Material.Filled.Refresh">
                    Retry
                </MudButton>
                <MudButton Color="Color.Secondary" Variant="Variant.Outlined" Href="/" StartIcon="@Icons.Material.Filled.Home">
                    Home
                </MudButton>
            </MudStack>
        </MudStack>
    </MudCardContent>
</MudCard>

@code {
    [Parameter,EditorRequired] public string ErrorTitle { get; set; } = "Something went wrong";
    [Parameter,EditorRequired] public string ErrorMessage { get; set; } = "Unknown error.";
    [Parameter,EditorRequired] public EventCallback OnRetry { get; set; }

    private async Task OnRetryClicked()
    {
        await OnRetry.InvokeAsync();
    }
}
