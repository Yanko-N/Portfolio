@using MudBlazor
@using static Application.Contracts.DTOs.Response
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MudPaper Class="hero-card mb-4 p-3 p-md-4"
          Elevation="1"
          Outlined="true"
          Square="false">

    <div class="container-fluid">
        <div class="row">
            <div class="col-6 d-flex justify-content-start">
                <MudText Typo="Typo.subtitle1" Class="fw-bold text-uppercase">Experience</MudText>
            </div>
            <div class="col-6 d-flex justify-content-end">
                @if (Works?.Count() > MaxItemsToShow && !string.IsNullOrWhiteSpace(ViewAllUrl))
                {
                    <MudButton Variant="Variant.Text"
                               Color="Color.Default"
                               Class="px-1"
                               EndIcon="@Icons.Material.Filled.ArrowForwardIos"
                               OnClick="GoToWorksPage">
                        view all
                    </MudButton>
                }
            </div>
        </div>

        <div class="row mt-2 gy-3">
            @foreach (var work in Works.Take(MaxItemsToShow))
            {
                <div class="col-12">
                    <div class="d-flex align-items-start gap-3">
                        <div class="d-flex align-items-center justify-content-center"
                             style="width:40px;height:40px;border-radius:8px;">
                            @if (!string.IsNullOrWhiteSpace(GetWorkImageSrc(work.Enterprise)))
                            {
                                <MudImage Src="@GetWorkImageSrc(work.Enterprise)"
                                          Alt="@work.Enterprise?.Image?.AltText"
                                          Style="width:40px;height:40px;object-fit:cover;border-radius:8px;" />
                            }
                            else
                            {
                                <MudIcon Icon="@Icons.Material.Filled.Work" Size="Size.Medium" Class="opacity-75" />
                            }
                        </div>

                        <div class="flex-grow-1">
                            <MudText Typo="Typo.subtitle2" Class="fw-bold">
                                @work.Title
                            </MudText>
                            <MudText Typo="Typo.caption" Color="Color.Secondary">
                                @work.Enterprise?.Name • @FormatRange(work.StartDate, work.EndDate)
                            </MudText>

                            @if (!string.IsNullOrWhiteSpace(work.Description))
                            {
                                <MudText Typo="Typo.body2" Class="mt-1">
                                    @work.Description
                                </MudText>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</MudPaper>

@code {

    [Parameter, EditorRequired] public IEnumerable<WorkDto> Works { get; set; }
    [Parameter] public int MaxItemsToShow { get; set; } = 4;
    [Parameter, EditorRequired] public string? ViewAllUrl { get; set; }
    private bool _isBusy = false;

    private string GetWorkImageSrc(EnterpriseDto dto) =>
     dto?.Image?.Path ?? dto?.Image?.Url ?? string.Empty;

    private string FormatRange(DateOnly start, DateOnly? end)
       => $"{start:yyyy-MM} — {(end.HasValue ? end.Value.ToString("yyyy-MM") : "Present")}";

    private void GoToWorksPage()
    {
        if (_isBusy || string.IsNullOrWhiteSpace(ViewAllUrl))
        {
            return;
        }
        _isBusy = true;
        NavigationManager.NavigateTo(ViewAllUrl);
        _isBusy = false;
    }
}
